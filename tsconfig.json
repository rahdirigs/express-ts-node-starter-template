{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "outDir": "./dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "importsNotUsedAsValues": "error",
    "skipLibCheck": true
  },
  "include": [
    "src",
    "./.eslintrc.cjs",
    "./.prettierrc.cjs"
  ]
}